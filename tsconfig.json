{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"], 
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
      "@contexts": ["contexts"],
      "@hooks/*": ["hooks/*"],
    }
  },
  "include": ["./src/"],
  "exclude": ["node_modules,", "webpack", "build"]
}
